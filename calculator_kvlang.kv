<Calculator>
	clear:clear
	number_box:number_box

	BoxLayout:
		size:root.width,root.height
		orientation: "vertical"
		padding:10

		TextInput:
			id:number_box
			font_size: 62
			halign:"right"
			size_hint: (1, 0.15)
			text:"0"
		GridLayout:
			cols:4
			rows:5
			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"%"
				on_press:root.number_insert("%")

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"<<"
				on_press:root.backspace()

			Button:
				id:clear
				size_hint:(.2,.2)
				font_size:35
				text:"C"	
				on_press:root.clear_box()

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"/"
				on_press:root.number_insert("/")

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"7"
				on_press:root.number_insert(7)

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"8"
				on_press:root.number_insert(8)

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"9"
				on_press:root.number_insert(9)	

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"*"
				on_press:root.number_insert("*")

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"4"
				on_press:root.number_insert(4)

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"5"
				on_press:root.number_insert(5)

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"6"
				on_press:root.number_insert(6)

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"-"
				on_press:root.number_insert("-")

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"1"
				on_press:root.number_insert(1)

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"2"
				on_press:root.number_insert(2)

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"3"
				on_press:root.number_insert(3)

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"+"
				on_press:root.number_insert("+")

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"+/-"
				on_press:root.negative_command()

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"0"
				on_press:root.number_insert(0)

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"."
				on_press:root.number_insert(".")

			Button:
				size_hint:(.2,.2)
				font_size:35
				text:"="
				on_press:root.equals()